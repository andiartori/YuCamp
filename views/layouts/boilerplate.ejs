		<script>
			src =
				"https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js";
		</script>

		<script>
			document.addEventListener("DOMContentLoaded", function () {
				const fileInput = document.getElementById("image");
				const fileLabel = document.getElementById("file-label");

				fileInput.addEventListener("change", function () {
					if (this.files.length > 1) {
						let fileNames = Array.from(this.files)
							.map((file) => file.name)
							.join(", ");
						fileLabel.innerText = `${this.files.length} files selected: ${fileNames}`; // Show all file names
					} else if (this.files.length === 1) {
						fileLabel.innerText = this.files[0].name; // Show single file name
					} else {
						fileLabel.innerText = "Choose file"; // Reset label if no file selected
					}
				});
			});
		</script>

		<script src="/javascripts/validateForms.js"></script>
	</body>
